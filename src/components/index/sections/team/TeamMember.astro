---
import type { TeamMember } from "@/content/config"
import Image from "astro/components/Image.astro"

interface Props extends TeamMember {}

const { avatar, avatarAlt, name, role } = Astro.props
---

<div class="flex flex-col items-center gap-4 mx-auto">
   <Image
      src={avatar}
      alt={avatarAlt}
      class="rounded-full"
      width={150}
      height={150}
   />
   <div class="text-center flex flex-col w-full gap-2">
      <h3 class="text-lg font-bold">{name}</h3>
      <p class="text-sm">{role}</p>
   </div>
</div>
