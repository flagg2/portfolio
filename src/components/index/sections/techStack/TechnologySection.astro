---
import type { TechnologySection } from "@/content/config"
import Image from "astro/components/Image.astro"
import { getEntries } from "astro:content"

interface Props extends TechnologySection {}

const { title, items } = Astro.props

const technologies = await getEntries(items)
---

<div class="flex flex-col gap-2">
   <h3 class="text-lg font-bold">{title}</h3>
   <div class="flex gap-4">
      {
         technologies.map((technology) => (
            <div class="flex gap-2 px-4 py-3 border border-border items-center rounded-lg">
               <Image
                  class="w-8 h-8 object-contain"
                  src={technology.data.logo}
                  width={32}
                  height={32}
                  alt={technology.data.logoAlt}
               />
               <h4>{technology.data.title}</h4>
            </div>
         ))
      }
   </div>
</div>
